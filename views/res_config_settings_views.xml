<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_config_settings_product_search" model="ir.ui.view">
        <field name="name">res.config.settings.product.search</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='connectors_setting_container']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box" id="google_images_settings">
                    <div class="o_setting_left_pane">
                        <field name="module_product_search" invisible="1"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="google_api_key" string="Google Images API"/>
                        <div class="text-muted">
                            Configura la clave API de Google para búsqueda de imágenes.
                        </div>
                        <div class="content-group mt16">
                            <label for="google_api_key" class="col-lg-3 o_light_label">API Key</label>
                            <field name="google_api_key"/>
                        </div>
                        <div class="content-group mt16">
                            <label for="google_cx" class="col-lg-3 o_light_label">CX</label>
                            <field name="google_cx"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
