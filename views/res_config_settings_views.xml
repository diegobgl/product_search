<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_config_settings_product_search" model="ir.ui.view">
        <field name="name">res.config.settings.product.search</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.view_res_config_settings"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='connectors_setting_container']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="module_product_search"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="module_product_search" string="Google Images API"/>
                        <div class="text-muted">
                            Usa la API de búsqueda de Google para obtener imágenes de productos mediante código de barras o nombre.
                        </div>
                        <div class="content-group">
                            <div class="row mt16">
                                <label string="API Key" for="google_api_key" class="col-lg-3"/>
                                <field name="google_api_key"/>
                            </div>
                            <div class="row mt16">
                                <label string="CX" for="google_cx" class="col-lg-3"/>
                                <field name="google_cx"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
