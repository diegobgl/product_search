<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_product_form_inherit" model="ir.ui.view">
            <field name="name">product.template.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
             <xpath expr="//field[@name='image_1920']" position="after">
                    <button name="set_main_image" type="object" string="Establecer Imagen Principal"/>
                </xpath>
                <xpath expr="//field[@name='description']" position="after">
                        <notebook>
                            <page string="ImÃ¡genes">
                                <field name="image_ids" widget="kanban" options="{'kanban_group_by': False}">
                                    <kanban>
                                        <field name="image"/>
                                        <field name="name"/>
                                        <templates>
                                            <t t-name="kanban-box">
                                                <div class="oe_kanban_global_click">
                                                    <img t-if="record.image.value"
                                                        t-att-src="'data:image/png;base64,' + record.image.value"
                                                        style="max-width: 150px; max-height: 150px;"/>
                                                    <div class="oe_kanban_details">
                                                        <strong><t t-esc="record.name.value"/></strong>
                                                        <br/>
                                                    </div>
                                                </div>
                                            </t>
                                        </templates>
                                    </kanban>
                                </field>
                            </page>
                        </notebook>
                    </xpath>
            </field>
        </record>           
    </data>
</odoo>
